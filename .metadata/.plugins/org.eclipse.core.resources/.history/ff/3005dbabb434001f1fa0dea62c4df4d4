package com.in28mintues.learnSpringBoot.courses.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

import com.in28mintues.learnSpringBoot.courses.bean.Course;
import com.in28mintues.learnSpringBoot.courses.repository.CourseRepository;

@RestController
public class CourseController {

	@Autowired
	private CourseRepository repository;

//http://localhost:8080/courses
	@GetMapping("/courses")
	public List<Course> getAllCourses() {

repository.findAll();		// return Arrays.asList(new Course(1, "Learn Microservices", "Brooke Steele"),
		// new Course(2, "Learn Angular and React", "Brooke Steele"));
	}

	// http://localhost:8080/courses
	@GetMapping("/courses1")
	public Course getCourseDetails() {
		return new Course(1, "Learn Microservices 1", "Brooke Steele");
	}
}
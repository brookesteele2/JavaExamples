package com.in28mintues.springboot.learn_jpa_and_hibernate.course.jpa;

import com.in28mintues.springboot.learn_jpa_and_hibernate.course.Course;

import jakarta.persistence.EntityManager;
import jakarta.persistence.PersistenceContext;

public class CourseJpaRepository {
	private EntityManager entityManager;

	@PersistenceContext
	public void insert(Course course) {
		entityManager.merge(course);
	}

	public void findByID(long id) {
		entityManager.find(Course.class, id);
	}

	public void delete(long id) {
		entityManager.delete(Course.class, id);
	}



}
